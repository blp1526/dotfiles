set main-view = line-number:no id:yes date:default author:full commit-title:graph=yes,refs=yes
set refs-view = line-number:no id:yes date:default author:full ref commit-title
set vertical-split = no
set split-view-height = 75%
set diff-options = -m --first-parent
set ignore-case = yes

bind refs C <git checkout %(branch)

bind generic <C-A> move-first-line
bind generic <C-E> move-last-line
