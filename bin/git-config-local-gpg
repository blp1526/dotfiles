#!/usr/bin/env bash

set -eu

git config --local gpg.program "$(which gpg)"

read -r -p "Input user.name: " GIT_CONFIG_LOCAL_GPG_USER_NAME
git config --local user.name "${GIT_CONFIG_LOCAL_GPG_USER_NAME}"

read -r -p "Input user.email: " GIT_CONFIG_LOCAL_GPG_USER_EMAIL
git config --local user.email "${GIT_CONFIG_LOCAL_GPG_USER_EMAIL}"

read -r -p "Input user.signingKey: " GIT_CONFIG_LOCAL_GPG_USER_SIGNINGKEY
git config --local user.signingKey "${GIT_CONFIG_LOCAL_GPG_USER_SIGNINGKEY}"

# git config --local commit.gpgSign true
