[core]
  editor      = vim
  quotepath   = false
  commentchar = ";"
[color]
  status      = auto
  diff        = auto
  branch      = auto
  interactive = auto
  grep        = auto
[pager]
  log  = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[push]
  default = nothing
[merge]
  ff = false
[pull]
  ff = only
[alias]
  st = status
  ci = commit -v
  co = checkout
  br = branch
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
[user]
  useConfigOnly = true
