[include]
  path = .gitconfig.local
[color]
  status      = auto
  diff        = auto
  branch      = auto
  interactive = auto
  grep        = auto
[core]
  editor       = vim
  excludesfile = ~/.gitignore_global
  quotepath    = false
[push]
  default = nothing
[merge]
  ff = false
[alias]
  st                     = status
  ci                     = commit -v
  co                     = checkout
  br                     = branch
  df                     = diff
  rp                     = rev-parse
  ranking                = shortlog -ns
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d % && git fetch --prune
  see                    = browse
  # http://inside.pixiv.net/entry/2014/03/26/100539
  quicktag               = !git tag $(date +%Y%m%d%H%M)
