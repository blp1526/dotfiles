[color]
  status      = auto
  diff        = auto
  branch      = auto
  interactive = auto
  grep        = auto
[core]
  editor       = vim
  quotepath    = false
[push]
  default = nothing
[merge]
  ff = false
[pull]
  ff = only
[alias]
  st                     = status
  ci                     = commit -v
  cie                    = commit -v --allow-empty
  co                     = checkout
  br                     = branch
  df                     = diff
  rp                     = rev-parse
  ranking                = shortlog -ns
  refs                   = !git checkout $(git branch | peco | awk '{ print $NF }')
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d % && git fetch --prune
  release                = "!f(){ git tag -a $1 -m \"$1 release\";};f"
  cf                     = cat-file -p
  sb                     = show-branch
  sr                     = show-ref
  tags                   = tag -l --sort=v:refname
[user]
  useConfigOnly = true
[commit]
  template = ~/.gitmessage.txt
