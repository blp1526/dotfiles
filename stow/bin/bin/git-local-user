#!/usr/bin/env bash
set -eu

source "${HOME}/.config/dotfiles/git-local-user.sh"
git config --local gpg.program "$(which gpg)"
git config --local user.name "${GIT_LOCAL_USER_NAME}"
git config --local user.email "${GIT_LOCAL_USER_EMAIL}"
git config --local user.signingKey "${GIT_LOCAL_USER_SIGNINGKEY}"
git config --local commit.gpgSign true
